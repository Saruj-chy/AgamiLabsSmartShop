<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FireInboxShow.activity.FirestoreChatImageActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/appbar_chat_image"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_firestore_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_chat_image"
        android:layout_margin="5dp"

        />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_chat_image"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="1"
            android:background="@drawable/border_input"
            >
            <ImageButton
                android:id="@+id/frame_img_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_clear"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_solid"
                android:onClick="onClearFrameClick"
                />
            <ImageView
                android:id="@+id/frame_img_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_image"
                android:scaleType="fitXY"
                android:layout_below="@+id/frame_img_btn"
                android:layout_margin="5dp"
                />
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>