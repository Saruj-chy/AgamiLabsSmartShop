<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FireInboxShow.FireStoreUserActivity">


    <include
        layout="@layout/app_bar_layout_firestore"
        android:id="@+id/app_bar_layout_firestore"/>




    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/firestore_toolbar"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:translationZ="90dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_client"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/smart_shop"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout_firestore"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_user_firestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>