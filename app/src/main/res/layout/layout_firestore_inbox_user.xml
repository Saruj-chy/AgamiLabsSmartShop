<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/relative_image_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RelativeLayout
                    android:id="@+id/relative_image"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"

                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_user"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"


                        android:src="@drawable/profile_image"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_centerVertical="true"

                    android:layout_toEndOf="@+id/relative_image"
                    android:layout_toRightOf="@+id/relative_image">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"

                            >
                            <TextView
                                android:id="@+id/text_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sarose Datta"
                                android:textColor="@color/green"
                                android:textSize="18dp"
                                android:paddingBottom="10dp"
                                android:textStyle="bold"
                                android:justificationMode="inter_word"

                                />


                            <TextView
                                android:id="@+id/text_user_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_category"
                                android:text="Hey, bro. I am available "
                                android:textColor="@android:color/holo_green_light"
                                android:textSize="14dp"
                                android:visibility="gone"
                                android:layout_marginBottom="10dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_stock"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/relative_image_part"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>