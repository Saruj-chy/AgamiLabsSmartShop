<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:foregroundGravity="center"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/text_id"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="id"
                android:textSize="16dp" />



            <TextView
                android:id="@+id/text_name"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/lightgray"
                android:text="item name"
                android:textSize="16dp"

                />



            <TextView
                android:id="@+id/text_initial"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Initial Qty"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text_remaining"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/lightgray"
                android:text="Remaining Qty"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/text_sale"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sale Rate"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/text_purchase"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/lightgray"
                android:text="Purchase Rate"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/text_amount"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Stock Amount"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/text_reorder"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/lightgray"
                android:text="Reorder"
                android:textSize="16dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>