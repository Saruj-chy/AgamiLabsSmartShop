<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_document_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="documentId"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/text_unseen_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unseen message"
        android:layout_below="@+id/text_document_id"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/text_update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LastUpdateTime"
        android:layout_below="@+id/text_unseen_msg"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"/>

</RelativeLayout>